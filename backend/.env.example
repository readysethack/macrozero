## --- Database (TiDB/MySQL) ---
DB_HOST=
DB_PORT=
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=

## --- GitHub App (server-to-server) ---
# App ID from the GitHub App settings
GITHUB_APP_ID=
# Installation ID after installing the App into your repo/org
GITHUB_INSTALLATION_ID=
# Webhook secret configured in the App
GITHUB_WEBHOOK_SECRET=
# For docker-compose, default to the secret mount path; override locally if needed
GITHUB_PRIVATE_KEY_PATH=/run/secrets/gh_app_key

## --- LLM Provider (Moonshot Kimi via LiteLLM) ---
KIMI_API_KEY=
# Optional override
KIMI_API_BASE_URL=

## --- Optional: GitHub OAuth (frontend login) ---
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

## --- JWT Configuration ---
JWT_SECRET_KEY=
